	</div>
	<script>
		var swiper = new Swiper('.swiper-container', {
        slidesPerView: 1,
        spaceBetween: 10,
        breakpoints: {
            640: {
            slidesPerView: 1,
            spaceBetween: 20
            },
            768: {
            slidesPerView: 2,
            spaceBetween: 40
            },
            1024: {
